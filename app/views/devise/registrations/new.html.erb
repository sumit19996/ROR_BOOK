<div class="container">
  <div class="form-horizontal">
    <div class=form-group>
      <div class="form-group" style="text-align: center;margin-top: -20px">
        <h1 style="font-family:tahoma;color: #1877f2; font-size: 70px"><strong>Rorbook</strong></h1>
        <h3 >RORBook helps you connect and share with the people in your life.</h3>
      </div>
      <div class="form-group" style="margin-bottom:50px">
        <div class="container login-shadow" style="width: 450px; border-radius: 2px;padding: 15px 20px;background-color: #fff">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <h2 style="text-align: left;font-weight: bold;">Sign Up</h2>
            <p style="text-align:left">It's quick and easy.</p>
          </div>
          <hr>
          <div class="form-row">
            <div class="col-md-6 col-sm-6 form-group">
              <%= f.text_field :first_name,autofocus: true, class: "form-control",placeholder: "First Name" %>
            </div>
            <div class="col-md-6 col-sm-6 form-group">
              <%= f.text_field :last_name,class: "form-control",placeholder: "Surname" %>                
            </div> 
          </div>
          <div class="form-group">
            <%= f.email_field :email,class: "form-control",placeholder: "Email"%>
          </div>
          <div class="form-group">
            <p style="text-align: left;font-size: 12px; margin-bottom: -3px">Date of Birth</p>
            <%= f.date_field :birth_date,class: "form-control",placeholder: "Birth Date"%>
          </div>
          <p style="text-align: left;font-size: 12px; margin-bottom: -1px">Gender</p>
          <div class="form-row container">
            <div class="col-md-4 col-sm-4 form-group">
              <%= f.radio_button(:gender, "Male") %>
              <%= f.label(:gender_male, "Male") %>
            </div>
            <div class="col-md-4 col-sm-4 form-group">            
              <%= f.radio_button(:gender, "Female") %>
              <%= f.label(:gender_female, "Female") %>
            </div>
            <div class="col-md-4 col-sm-4 form-group">            
              <%= f.radio_button(:gender, "Other") %>
              <%= f.label(:gender_other, "Other") %>
            </div>            
          </div>    
          <div class="form-group">
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password,class: "form-control",placeholder: "New Password" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation,class: "form-control",placeholder: "Confirm Password"%>
          </div>

          <div class="actions">
            <%= f.submit "Sign up",style: "height:40px; width:200px",class:"btn btn-success bg-blue text-white" %>
          </div>
          <hr>
          <%- if controller_name != 'sessions' %>
          <p style="text-align: left;font-size: 15px">Already Signed Up?</p>
          <%= link_to "Log in", new_session_path(resource_name),style: "height:auto;width:200px",class:"btn btn-login bg-blue text-white" %><br />
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


