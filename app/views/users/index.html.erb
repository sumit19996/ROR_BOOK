  function create_comment(post_id){
  	var element = document.getElementById("content");
    $.ajax({
      url: "/posts/"+post_id+"/comments",
      type: "POST",
      data: {comment: {content: element.value}},
      dataType: "json",
      success: function(data) {
      	location.reload();
      }
    });  
  }

</script>