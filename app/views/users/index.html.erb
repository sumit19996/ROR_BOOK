<div class=container>
	<div class=row>
		<div class=col-8>
			<% @posts.each do |post| %>
				<div class="post-fb">
					<div class="post-meta">
						<p style="margin-bottom: -2px"><%= post.user.full_name %></p>
						<p><%= post.user.created_at.to_date %></p>
					</div>
					<%= image_tag post.image.url,style:"width:100%;height:auto"%>
				</div>			
			<% end %>
		</div>
	</div>
</div>

