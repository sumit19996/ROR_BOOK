
<div class=container>
	<div class=row>
		<div class="col-3 home-left-box">
			<div class="container">
				<div class="form-horizontal ">
					<% if current_user.image.present? %>
					<%= link_to (profile_path(current_user.id) )do %>
					<%= image_tag current_user.image.url,class: "img-profilepicture-home hover-box"%>
					<% end %>					
					<% end %>
					<div style="margin-top:-5px">
						<%= link_to (profile_path(current_user.id) )do %>
						<p style="text-align: left;color: #000"><%= current_user.full_name %></p>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class=col-6>
			<div class="form-horizontal">
				<div class=form-group>
					<div class="form-group">
						<div class="container post-fb" style="background-color: #fff">
							<%= form_for @post, html: { multipart: true } do |f| %>
							<div class="form-horizontal" style="border: 5px solid #fff">
								<div class="form-group">
									<% flash.each do |type, msg| %>
									<div style="text-align: left">
										<% if type == "error" %>
										<p style="color:red"><%= msg %></p>
										<% else %>
										<p style="color:green"><%= msg %></p>
										<% end %>
									</div>
									<% end %>
								</div>
								<div class="form-row">
									<div class="col-3">			
										<% if current_user.image.present? %>
										<%= image_tag current_user.image.url,class: "img-profilepicture-new-post"%>
										<% end %>
									</div>
									<div class="col-9">			
										<%= f.text_area :caption,class:"caption",placeholder:"What's on your mind?" %>
									</div>
								</div>
								<br>
								<div class="form-row">
									<div class="col-6" >
										<%= f.file_field :image %>
										<%= f.hidden_field :image_cache %>
									</div>
									<div class="col-6">			
										<%= f.submit "Create",class:"btn btn-login  bg-blue text-white"%>
									</div>
								</div>
							</div>
						</div>
						<% end %>
					</div>
				</div>
			</div>
			<% @posts.each do |post| %>
			<div class="post-fb">
				<div class="post-meta">
					<div class="form-row">
						<div class="col-3">
							<% if post.user.image.present? %>
							<%= image_tag post.user.image.url,class: "img-profilepicture-post"%>
							<% end %>
						</div>

						<div class="col-9" style="margin-left:-55px">
							<p style="margin-bottom: -2px;text-align: left"><%= post.user.full_name %></p>
							<p style="text-align: left;font-weight: normal;font-size: 12px;color:grey	"><%= time_ago_in_words post.created_at %></p>
						</div>
					</div>
				</div>

				<p style="text-align: left"><%= post.caption %></p>
				<% if post.image.present? %>
				<%= image_tag post.image.url,style:"width:100%;height:auto"%>
				<% end %>
				<div class="post-actions" >
					<div id="post-<%= post.id%>">
					  <%= render partial: 'like_button', locals: {post: post} %>
					</div>
					<i class="fa fa-comment post-comment"></i>
				</div>
				<% post.comments.each do |comment| %>
				<div class="form-row" style="margin-bottom: 10px">
					<div class="col-2">			
						<% if comment.user.image.present? %>
						<%= image_tag comment.user.image.url,class: "img-profilepicture-comment"%>
						<% end %>
					</div>
					<div class="col-10">			
						<div class="comment-body">
							<p><strong><%= comment.user.full_name %></strong></p>
							<p style="margin-top:-15px"><%= comment.content %></p>
							<p style="margin-top:-15px;font-size:10px;color:grey"><%= time_ago_in_words comment.created_at %></p>
						</div>
					</div>
				</div>
				<% end %>
				<div class="form-row" style="margin-bottom: 10px">
					<div class="col-2">			
						<% if current_user.image.present? %>
						<%= image_tag current_user.image.url,class: "img-profilepicture-comment"%>
						<% end %>
					</div>
					<div class="col-8" style="margin-top:7px">			
							<input type="text_area" id="content" class="comment-body form-control" style="width:105%;height:40px">
					</div>
					<div class="col-2"style="margin-top:7px">			
						<input type="button" value="create" class="btn btn-login  bg-blue text-white"style="height:40px;border-radius:10px" onclick="create_comment(<%= post.id %>)">
					</div>
				</div>
			</div>
			<% end %>
		</div>
		<div class="col-3">
		</div>
	</div>
</div>
